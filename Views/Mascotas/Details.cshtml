@model MascotaDto
@{
    ViewData["Title"] = "Detalles de Mascota";
}
<h1 class="mb-3">Detalles de Mascota</h1>

<dl class="row">
    <dt class="col-sm-3">Id</dt>
    <dd class="col-sm-9">@Model.Id</dd>
    <dt class="col-sm-3">Cliente</dt>
    <dd class="col-sm-9">@Model.ClienteId</dd>
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>
    <dt class="col-sm-3">Especie</dt>
    <dd class="col-sm-9">@Model.Especie</dd>
    <dt class="col-sm-3">Raza</dt>
    <dd class="col-sm-9">@Model.Raza</dd>
    <dt class="col-sm-3">Sexo</dt>
    <dd class="col-sm-9">@Model.Sexo</dd>
    <dt class="col-sm-3">Nacimiento</dt>
    <dd class="col-sm-9">@Model.FechaNacimiento?.ToString("yyyy-MM-dd")</dd>
    <dt class="col-sm-3">Activo</dt>
    <dd class="col-sm-9">@(Model.Activo ? "Sí" : "No")</dd>
</dl>

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index" asp-route-clienteId="@Model.ClienteId">Volver</a>
</p>




