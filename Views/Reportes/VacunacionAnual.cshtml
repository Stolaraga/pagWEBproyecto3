@model IEnumerable<Veterinaria.Web.Services.ReportesApiClient.ReporteVacunaRow>
@{
    ViewData["Title"] = "Vacunación — Próxima semana";
}
<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay mascotas con vacunación próxima en la semana.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Mascota</th>
                <th>Próxima vacunación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.ClienteNombre</td>
                    <td>@r.MascotaNombre</td>
                    <td>@r.Proxima.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
