@model Veterinaria.Web.Models.ProcedimientoDto
@using Veterinaria.Web.Models
@{
    ViewData["Title"] = "Editar Procedimiento";
    var mascotas = (IEnumerable<Veterinaria.Web.Models.MascotaDto>) (ViewBag.MascotasFull ?? Enumerable.Empty<Veterinaria.Web.Models.MascotaDto>());

    var clientesLookupJson = System.Text.Json.JsonSerializer.Serialize(
        (System.Collections.Generic.Dictionary<System.Guid, string>)(ViewBag.ClientesLookup ?? new System.Collections.Generic.Dictionary<System.Guid, string>())
    );
}
<h1 class="mb-3">Editar Procedimiento</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    @if (ViewBag.ReturnToAll == true)
    {
        <input type="hidden" name="returnToAll" value="true" />
    }

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <!-- Dueño: no editable -->
    <input type="hidden" asp-for="ClienteId" id="ClienteIdHidden" />
    <div class="mb-3">
        <label class="form-label">Cliente (dueño)</label>
        <input class="form-control" id="ClienteDisplay" readonly />
        <div class="form-text">Se actualiza automáticamente al cambiar la mascota.</div>
    </div>

    <!-- Mascota -->
    <div class="mb-3">
        <label class="form-label" asp-for="MascotaId">Mascota</label>
        <select class="form-select" asp-for="MascotaId" id="MascotaSelect">
            <option value="">-- Seleccione --</option>
            @foreach (var m in mascotas)
            {
                if (m.Id == Model.MascotaId)
                {
                    <option value="@m.Id" data-clienteid="@m.ClienteId" selected="selected">@m.Nombre (@m.Especie)</option>
                }
                else
                {
                    <option value="@m.Id" data-clienteid="@m.ClienteId">@m.Nombre (@m.Especie)</option>
                }
            }
        </select>
        <span asp-validation-for="MascotaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="EmpleadoId">Atendido por</label>
        <select class="form-select" asp-for="EmpleadoId" asp-items="ViewBag.Empleados"></select>
        <span asp-validation-for="EmpleadoId" class="text-danger"></span>
    </div>

    <div class="row">
      
        <div class="col-md-6 mb-3">
            <label asp-for="Fecha" class="form-label"></label>
            <input asp-for="Fecha" class="form-control" type="date" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Notas" class="form-label"></label>
        <textarea asp-for="Notas" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notas" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index" asp-route-mascotaId="@Model.MascotaId">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const CLIENTES_LOOKUP = @Html.Raw(clientesLookupJson);
        (function () {
            const sel = document.getElementById('MascotaSelect');
            const hid = document.getElementById('ClienteIdHidden');
            const disp = document.getElementById('ClienteDisplay');

            function syncOwner() {
                const opt = sel.options[sel.selectedIndex];
                const cid = opt ? opt.getAttribute('data-clienteid') : '';
                if (cid) { hid.value = cid; disp.value = CLIENTES_LOOKUP[cid] || cid; }
                else { hid.value = ''; disp.value = ''; }
            }
            sel.addEventListener('change', syncOwner);
            syncOwner(); // inicial
        })();
    </script>
}
