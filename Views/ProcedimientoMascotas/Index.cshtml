@model IEnumerable<Veterinaria.Web.Services.ProcedimientoMascotasApiClient.CitaReadDto>

@{
    ViewData["Title"] = "Procedimientos";
    var cr = new System.Globalization.CultureInfo("es-CR");
}

<h2 class="mb-3">Procedimientos</h2>

@if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Nuevo procedimiento</a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Mascota</th>
            <th>Servicio</th>
            <th>Veterinario</th>
            <th>Estado</th>
            <th class="text-end">Precio cobrado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model ?? Enumerable.Empty<Veterinaria.Web.Services.ProcedimientoMascotasApiClient.CitaReadDto>())
        {
            <tr>
                <td>@x.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(string.IsNullOrWhiteSpace(x.NombreMascota) ? "(s/nombre)" : x.NombreMascota)</td>
                <td>@(string.IsNullOrWhiteSpace(x.Servicio) ? "(servicio)" : x.Servicio)</td>
                <td>@(string.IsNullOrWhiteSpace(x.Veterinario) ? "(veterinario)" : x.Veterinario)</td>
                <td>
                    @if (string.Equals(x.Estado, "Completada", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-success">Completada</span>
                    }
                    else if (string.Equals(x.Estado, "Cancelada", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-danger">Cancelada</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                </td>
                <td class="text-end">
                    @(x.PrecioCobrado.HasValue ? string.Format(cr, "{0:C}", x.PrecioCobrado.Value) : "—")
                </td>
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@x.Id" class="btn btn-sm btn-outline-secondary">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>