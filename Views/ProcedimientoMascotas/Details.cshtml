@model Veterinaria.Web.Models.ProcedimientoMascotaDto
@{
    ViewData["Title"] = "Detalle de Procedimiento";
}
<h1 class="mb-3">Detalle de Procedimiento</h1>

<dl class="row">
    <dt class="col-sm-3">Id</dt>
    <dd class="col-sm-9">@Model.Id</dd>
    <dt class="col-sm-3">Cliente</dt>
    <dd class="col-sm-9">@Model.ClienteId</dd>
    <dt class="col-sm-3">Mascota</dt>
    <dd class="col-sm-9">@Model.MascotaId</dd>
    <dt class="col-sm-3">Empleado</dt>
    <dd class="col-sm-9">@Model.EmpleadoId</dd>
    <dt class="col-sm-3">Tipo</dt>
    <dd class="col-sm-9">@Model.Tipo</dd>
    <dt class="col-sm-3">Fecha</dt>
    <dd class="col-sm-9">@((Model.Fecha != null) ? Model.Fecha.ToString("yyyy-MM-dd") : "")</dd>
    <dt class="col-sm-3">Notas</dt>
    <dd class="col-sm-9">@Model.Notas</dd>
</dl>

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id" asp-route-mascotaId="@(ViewBag.MascotaId)">Editar</a>
    <a class="btn btn-secondary" asp-action="Index" asp-route-mascotaId="@(ViewBag.MascotaId)">Volver</a>
</p>
