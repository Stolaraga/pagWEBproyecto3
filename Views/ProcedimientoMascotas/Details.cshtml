@model Veterinaria.Web.Services.ProcedimientoMascotasApiClient.CitaReadDto
@{
    ViewData["Title"] = "Detalle del procedimiento";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Mascota</dt>
        <dd class="col-sm-9">@Model?.NombreMascota</dd>

        <dt class="col-sm-3">Servicio</dt>
        <dd class="col-sm-9">@Model?.Servicio</dd>

        <dt class="col-sm-3">Fecha/Hora</dt>
        <dd class="col-sm-9">@Model.FechaHora.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model?.Estado</dd>

        <dt class="col-sm-3">Precio cobrado</dt>
        <dd class="col-sm-9">@((Model?.PrecioCobrado ?? 0m).ToString("C0", new System.Globalization.CultureInfo("es-CR")))</dd>

        <dt class="col-sm-3">Veterinario</dt>
        <dd class="col-sm-9">@Model?.Veterinario</dd>

        <dt class="col-sm-3">Notas</dt>
        <dd class="col-sm-9">@Model?.Notas</dd>
    </dl>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
        <!-- estos botones los activaremos cuando hagamos Edit y Delete -->
        @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
       <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a> *@
    </div>
</div>
