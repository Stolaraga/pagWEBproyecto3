@model Veterinaria.Web.Services.ProcedimientoMascotasApiClient.CitaReadDto

@{
    ViewData["Title"] = "Editar cita";

    var cr = new System.Globalization.CultureInfo("es-CR");
    string precioTxt = Model.PrecioCobrado.HasValue
        ? string.Format(cr, "{0:C0}", Model.PrecioCobrado.Value)
        : "—";
}

<div class="container-lg px-0 px-md-2">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h3 class="card-title mb-0">Editar cita</h3>
        </div>

        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()

            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label text-muted mb-1">Mascota</label>
                    <input class="form-control" value="@Model.NombreMascota" readonly />
                </div>

                <div class="mb-3">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 col-md-3 text-muted">Procedimiento actual</dt>
                        <dd class="col-sm-8 col-md-9">
                            <span class="fw-semibold">@Model.Servicio</span>
                        </dd>

                        <dt class="col-sm-4 col-md-3 text-muted">Precio cobrado</dt>
                        <dd class="col-sm-8 col-md-9">
                            <span class="badge bg-secondary">@precioTxt</span>
                        </dd>
                    </dl>
                </div>

                <hr class="text-muted">

                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="FechaHora" class="form-label">Fecha y hora</label>
                        <input  type="datetime-local"
                                id="FechaHora"
                                name="FechaHora"
                                class="form-control"
                                value="@(Model.FechaHora.ToLocalTime().ToString("yyyy-MM-ddTHH:mm"))" />
                        <div class="form-text">Modifica la fecha/hora y guarda.</div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label"></label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Pendiente">Pendiente</option>
                            <option value="Completada">Completada</option>
                            <option value="Cancelada">Cancelada</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>


                    <div class="col-12">
                        <label for="Notas" class="form-label">Notas</label>
                        <textarea id="Notas" name="Notas" class="form-control" rows="4"
                                  placeholder="Observaciones de la cita...">@Model.Notas</textarea>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>
