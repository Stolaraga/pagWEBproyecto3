@model Veterinaria.Web.Services.ProcedimientoMascotasApiClient.CitaReadDto

@{
    ViewData["Title"] = "Editar cita";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="card p-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Mascota</label>
        <input class="form-control" value="@Model.NombreMascota" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Servicio</label>
        <input class="form-control" value="@Model.Servicio" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha y hora</label>
        <input class="form-control" value="@Model.FechaHora" readonly />
    </div>

    <div class="mb-3">
        <label for="Estado" class="form-label">Estado</label>
        <select id="Estado" name="Estado" class="form-select">
            <option value="Pendiente"   selected="@(Model.Estado == "Pendiente")">Pendiente</option>
            <option value="Completada"  selected="@(Model.Estado == "Completada")">Completada</option>
            <option value="Cancelada"   selected="@(Model.Estado == "Cancelada")">Cancelada</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="Notas" class="form-label">Notas</label>
        <textarea id="Notas" name="Notas" class="form-control" rows="3">@Model.Notas</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
          const API = 'https://localhost:7195';
          const ddl  = document.getElementById('ServicioId');
          const selValue = '@Model.ServicioId';
          const precioInfo = document.getElementById('PrecioInfo');
          let servicios = [];
          const fmtCRC = new Intl.NumberFormat('es-CR', { style: 'currency', currency: 'CRC' });

          function setPrecioUI(item){
            if(!item){ precioInfo.textContent = 'Precio: —'; return; }
            precioInfo.textContent = `Precio base: ${fmtCRC.format(Number(item.precioBase||0))}`;
          }

          async function loadServicios(){
            ddl.innerHTML = '';
            ddl.add(new Option('Cargando servicios...', ''));
            ddl.disabled = true;
            try{
              const resp = await fetch(`${API}/api/servicios?soloActivos=false`, { headers: { accept: 'application/json, text/plain' }});
              const data = await resp.json();
              servicios = (Array.isArray(data)?data:[]).map(x => ({
                servicioId: Number(x.servicioId ?? x.ServicioId),
                nombre: x.nombre ?? x.Nombre ?? '(Sin nombre)',
                precioBase: Number(x.precioBase ?? x.PrecioBase ?? 0),
                activo: Boolean(x.activo ?? x.Activo ?? true)
              }));
              ddl.innerHTML = '';
              ddl.add(new Option('-- Seleccione un servicio --', ''));
              servicios
                .sort((a,b)=>a.nombre.localeCompare(b.nombre))
                .forEach(s => ddl.add(new Option(`${s.nombre}`, String(s.servicioId))));
              if (selValue) ddl.value = String(selValue);
              const item = servicios.find(x => String(x.servicioId) === ddl.value);
              setPrecioUI(item);
              ddl.disabled = false;
            }catch(e){
              console.error(e);
              ddl.innerHTML = '';
              ddl.add(new Option('— Error cargando servicios —', ''));
            }
          }

          ddl.addEventListener('change', ()=>{
            const item = servicios.find(x => String(x.servicioId) === ddl.value);
            setPrecioUI(item);
          });

          document.addEventListener('DOMContentLoaded', loadServicios);
        })();
    </script>
}
