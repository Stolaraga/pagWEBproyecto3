@model IEnumerable<Veterinaria.Web.Models.ClienteDto>
@{
    ViewData["Title"] = "Clientes";
}
<h1 class="mb-3">Clientes</h1>

<p><a class="btn btn-primary" asp-action="Create">Nuevo</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Canal</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Cedula</td>
                <td>@($"{c.Nombre} {c.Apellidos}")</td>
                <td>@c.Email</td>
                <td>@c.Telefono</td>
                <td>@c.CanalPreferido</td>
                <td>@(c.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@c.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@c.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
