@model Veterinaria.Web.Models.ClienteDto
@{
    ViewData["Title"] = "Detalles de Cliente";
}
<h1 class="mb-3">Detalles de Cliente</h1>

<dl class="row">
    <dt class="col-sm-3">Id</dt>
    <dd class="col-sm-9">@Model.Id</dd>
    <dt class="col-sm-3">Cédula</dt>
    <dd class="col-sm-9">@Model.Cedula</dd>
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@($"{Model.Nombre} {Model.Apellidos}")</dd>
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>
    <dt class="col-sm-3">Teléfono</dt>
    <dd class="col-sm-9">@Model.Telefono</dd>
    <dt class="col-sm-3">Canal preferido</dt>
    <dd class="col-sm-9">@Model.CanalPreferido</dd>
    <dt class="col-sm-3">Dirección</dt>
    <dd class="col-sm-9">@Model.Direccion</dd>
    <dt class="col-sm-3">Activo</dt>
    <dd class="col-sm-9">@(Model.Activo ? "Sí" : "No")</dd>
    <dt class="col-sm-3">Fecha registro</dt>
    <dd class="col-sm-9">@Model.FechaRegistro?.ToString("yyyy-MM-dd")</dd>
</dl>

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</p>
